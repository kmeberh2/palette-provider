<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainResultsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/opaque_lillies"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ResultsActivity">

    <LinearLayout
        android:id="@+id/colorBreakdownLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <Button
        android:id="@+id/saveThisColorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/theme_button"
        android:text="@string/save_this_color"
        app:backgroundTint="#2a6e3a"
        android:textColor="@color/white" />

</LinearLayout>
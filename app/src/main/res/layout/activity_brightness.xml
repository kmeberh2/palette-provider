<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/opaque_lillies"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/extractColor_status"
        android:layout_width="wrap_content"

        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/status_dots_2"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brightness"
        android:textColor="#15311e"
        android:fontFamily="@font/sunshine"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center">
    </TextView>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/alma465">
    </ImageView>
    <SeekBar
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:progress="70"
        android:theme ="@style/Button"
        android:thumbTint="#15311e"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
    </SeekBar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adjust Brightness"
        android:layout_marginBottom="30dp"
        android:textColor="#15311e"
        android:textSize="15dp"
        android:textStyle="bold"

        android:gravity="center">
    </TextView>

</LinearLayout>